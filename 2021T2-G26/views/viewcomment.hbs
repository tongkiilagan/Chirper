<div class="container">
    <div class="row justify-content-center">
        <div class="col-xxl-6 col-xl-6 col-lg-9 col-sm-12">

            <div id = "main-panel" class = "overflow-auto">
                <div class="back">
                    <a onclick="goBack()" target = "_self" class="btn" type="submit"><i class="material-icons">arrow_back</i> </a>
                </div>
                <hr>
                <div class="post-main">
                    <div class="thumbnail-post">
                        <img src="/Images/default.jpg" alt="default" style="border-radius: 50%;" width="60px" height = "60px">
                        <div class="post">
                            <div id="controls{{result._id}}" class="nameAndControls">
                                <h5><a href="/profile/{{result.author}}" class = "link-color" target = "_self" style="text-decoration: none">@{{result.author}}</a></h5>
                                {{#if result.isAuthor}}
                                    <button type="button" class="btn button-style" data-bs-toggle="dropdown" aria-expanded="false" style="color: rgb(131, 131, 131);">
                                        <i class="fas fa-ellipsis-h"></i>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item editComment" data-bs-toggle="modal" data-bs-target="#editModal{{result._id}}">Edit Comment</a></li>
                                        <li><a class="dropdown-item deleteComment">Delete Comment</a></li>
                                    </ul>
                                {{/if}}
                            </div>                            
                            <h6 class="gray">{{result.date}}</h6>
                            <p id="{{result._id}}">{{result.comment}}</p>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="editModal{{result._id}}" tabindex="-1" aria-labelledby="editModal{{result._id}}Label" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Edit Comment</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div id="edit{{result._id}}" class="modal-body">
                                <div class="post-form">
                                    <img src="/Images/default.jpg" alt="default" style="border-radius: 50%;" width="60px" height = "60px">
                                    <textarea class="form-control" rows="4" placeholder="Reply here!" style="resize: none;">{{result.comment}}</textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary editComment">Save</button>
                            </div>
                        </div>
                    </div>
                </div>

                <hr>
            </div>

        </div>
    </div>
</div>

<script>
    function goBack() {
        window.location=document.referrer;
    }
</script>