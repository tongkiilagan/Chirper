<div class="container">

    <div class="row align-items-start">
        <div class="col-xxl-3 col-xl-3 col-lg-3 d-none d-sm-block">
            <div id = "side-panel" class = "overflow-auto">
                <div id = "side-panel-header">
                    <img src="./Images/default.jpg" alt="default" class="profile-picture center" width = "100px" height="100px">
                    <div id = "account-names">
                        
                        <p id="loggedin-userID" hidden>{{head.userID}}</p>
                        <h3><a href="/profile/{{det1.username}}" class = "link-color" target = "_self" style="text-decoration: none">@{{det1.username}}</a></h3>
                        <h5>{{det1.firstname}} {{det1.lastname}}</h5>
                        <p><a href="/settings/account" target="_self" style = "text-decoration: none;"><i class="fas fa-pencil-alt"></i>  Edit Profile</a></p>
                    </div>
                </div>
                <div id = "bio">
                    <p>{{det1.bio}}</p>
                </div>
                <hr>
                <div id = "side-panel-settings">
                    <p><a href="/settings/account" class = "link-color" target="_self" style = "text-decoration: none;">Settings</a></p>
                    <p><a href="/logout" class = "link-color" target="_self" style = "text-decoration: none;">Logout</a></p>
                </div>
            </div>
        </div>

        <div class="col-xxl-6 col-xl-9 col-lg-9">
            <div id = "main-panel" class = "overflow-auto">
                <div class="post-form">
                    <img src="/Images/default.jpg" alt="default" style="border-radius: 50%;" width="60px" height = "60px">

                    <textarea id="newPostField"class="form-control textarea-margin"  rows="2" placeholder="Share something!" style="resize: none;"></textarea>
                    <button id="newPost" type="button" class="btn btn-primary btn-sm">Post</button>
                </div>
                <hr>
                <div id="post-containers">
                    {{#each result}}
                        {{>post}}
                        
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="col-xxl-3 d-none d-xxl-block">
            <div id = "right-panel" class = "overflow-auto">
            <h4>Suggested users</h4>
                <hr>
                {{#if result2}}
                    {{#each result2}}
                        <div class="suggested-container">
                            <div class="card card-body">
                                <div class="thumbnail-post">
                                    <p class="profile-userID" hidden>{{_id}}</p>
                                    <img src="/Images/default.jpg" alt="default" width="60px" height = "60px">
                                    <div class="post">
                                        <h5><a href="/profile/{{username}}" class = "link-color" target = "_self" style="text-decoration: none">@{{username}}</a></h5>
                                        <p>{{firstName}} {{lastName}}</p>
                                    </div>
                                </div>
                                <button id="follow{{_id}}"type="button" class="btn btn-outline-info btn-sm multi-follow">Follow</button>                     
                                
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p style="margin-left: auto; margin-right: auto; color: rgb(131, 131, 131)">No users to show.</p>
                {{/if}}
                
            </div>

        </div>
    </div>



</div>