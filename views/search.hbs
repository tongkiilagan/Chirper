<div class="container">

    <div class="row align-items-start">

        <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-0"></div>

        <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-9">
            <p id="loggedin-userID" hidden>{{head._id}}</p>
            <div id = "main-panel" class = "overflow-auto">
                <div class="back">
                    <a onclick="goBack()" target = "_self" class="btn" type="submit"><i class="material-icons">arrow_back</i> </a>
                </div>
                <h3>Results for "{{query}}"</h3>
                <hr>
                {{#if posts}}
                    {{#each posts}}
                        <div class="post-main">
                            <div class="thumbnail-post">
                                <img src="/Images/default.jpg" alt="default"  width="60px" height = "60px">
                                <div class="post">
                                    <h5><a href="/profile/{{author.username}}" class = "link-color" target = "_self" style="text-decoration: none">@{{author.username}}</a></h5>
                                    <h6 class="gray">{{date}}</h6>
                                    <div onclick="location.href='/view/post/{{_id}}';" style="cursor: pointer;">
                                        <p>{{post}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p style="margin-left: auto; margin-right: auto; color: rgb(131, 131, 131)">No posts to display!</p>                
                {{/if}}
                <hr>
            </div> 
        </div>  

        <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 ">
            <div id = "right-panel" class = "overflow-auto">
                <h4>Users found</h4>
                <hr>
                {{#if users}}
                    {{#each users}}
                        <div class="card card-body right-panel-unit">
                            <div class="thumbnail-post">
                                <p id="profile-userID" hidden>{{_id}}</p>
                                <img src="/Images/default.jpg" alt="default" width="60px" height = "60px">
                                <div class="post">
                                    <h5><a href="/profile/{{username}}" class = "link-color" target = "_self" style="text-decoration: none">@{{username}}</a></h5>
                                    <p>{{firstName}} {{lastName}}</p>
                                </div>
                            </div>
                            {{#if isNotOwnAccount}}
                                {{#if isFollowing}}
                                    <button id="follow{{_id}}" type="button" class="btn btn-outline-info btn-sm multi-follow">Unfollow</button>
                                {{else}}
                                    <button id="follow{{_id}}" type="button" class="btn btn-outline-info btn-sm multi-follow">Follow</button>
                                {{/if}}
                            {{/if}}
                        </div>
                    {{/each}}
                {{else}}
                    <p style="margin-left: auto; margin-right: auto; color: rgb(131, 131, 131)">No users to display!</p>                
                {{/if}}
                <hr>
            </div>

        </div>
    </div>  


</div>

<script>
    function goBack() {
        window.location=document.referrer;
    }
</script>